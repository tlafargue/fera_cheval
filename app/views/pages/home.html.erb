<div id="homeBanner" class="banner" style="background-image: url(<%= image_path('image-banner.jpg') %>);">
    <%= link_to "LOUER UN CHEVAL", horses_path, class: 'btn-pmured' %>
</div>

<div class="container">
  <div class="d-flex justify-content-between mt-5">
    <h1>Chevaux vedettes</h1>
    <%= link_to "TOUS LES CHEVAUX", horses_path, class: "d-flex btn-pmured align-items-center" %>
  </div>
  <div class="horse-card-grid mx-auto my-5">
      <% @horses.each do |horse| %>
        <a href="<%= horse_path(horse) %>" class="horse-card">
          <%= cl_image_tag horse.photo.key, class: "img-fluid" %>
            <div class="horse-card-details p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3><%= horse.name.upcase %></h3>
                  <div class="breed">
                    🐴 <%= horse.breed.upcase %>
                  </div>
                </div>
                <div class="price">
                  🪙 <%= horse.price %>€ / J
                </div>
              </div>
          </div>
        </a>
      <% end %>
  </div>
</div>
