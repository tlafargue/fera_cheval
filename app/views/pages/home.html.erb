<div id="homeBanner" class="banner" style="background-image: url(<%= image_path('image-banner.png') %>);">
    <h1>FeraCheval</h1>
    <h2>Le cheval c'est trop génial</h2>
    <%= link_to "LOUER UN CHEVAL", horses_path, class: 'btn-pmured mb-5 mt-5 d-inline-block' %>
</div>

<div class="container">
  <div class="mt-5 offset-lg-1">
    <h2 class="h1">Chevaux vedettes 🐎</h1>
    <h3>La sélection des chevaux les plus prisés</h2>
  </div>
  <div class="horse-card-grid mx-auto my-5">
      <% @horses.each do |horse| %>
        <a href="<%= horse_path(horse) %>" class="horse-card">
          <%= cl_image_tag horse.photo.key, class: "img-fluid" %>
            <div class="horse-card-details p-4">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3><%= horse.name.upcase %></h3>
                  <div class="breed">
                    🐴 <%= horse.breed.upcase %>
                  </div>
                </div>
                <div class="price">
                  🪙 <%= horse.price %>€ / J
                </div>
              </div>
          </div>
        </a>
      <% end %>
  </div>
</div>
