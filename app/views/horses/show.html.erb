<div class="card-show">
  <div>
    <%= cl_image_tag @horse.photo.key, class:"img-cheval" %>
  </div>

  <div class="show-vertical">
    <div class="card-details">
      <h1 class="name-title"><strong><%= @horse.name %></strong> </h1>
      <div class="paragraphe">
        <h3><strong><%= "#{@horse.breed} | #{@horse.specialty}" %></strong></h3>
        <p><%= "Ce cheval est un(e) #{@horse.sex} qui est originaire de la ville de #{@horse.city}. Le propriétaire"%> <strong><%="#{@horse.user.name}"%></strong> <%="nous informe que ce chavel est agé d'environ" %> <strong><%="#{@horse.age}"%></strong> <%= "ans.
        C'est un cheval très docile joyeux, aux allures de cheval"%></p>
      </div>
    </div>

    <div class="container-form" data-controller="price" data-price="<%= @horse.price %>">
      <h1 class="name-title" id="form_title">Réservation</h1>
        <%= simple_form_for [@horse, @booking] do |f| %>

      <div class="container">
        <div class="row">
          <div class="col-6">
            <%= f.input :start_date, as: :date, label:"Date de départ", placeholder:"17/03/2023", html5: true, input_html: { data: { "price-target": "startDate", action: "change->price#result" } } %>
          </div>
          <div class="col-6">
            <%= f.input :end_date, as: :date, label:"Date de retour", placeholder:"23/03/2023", html5: true, input_html: { data: { "price-target": "endDate", action: "change->price#result" } } %>
          </div>
        </div>

        <div class="row">
          <div class="col-6 ">
            <p ><strong class="gras"><%= "#{@horse.price}€"%></strong><%= "/ Jour" %></p>
          </div>
          <div class="col-6  d-flex justify-content-end">
            <%= f.submit class:"btn btn-pmured mt-4"%>
          </div>
        </div>
          <% end %>
      </div>
      <div>
        <h2 data-price-target="priceTag">-- €</h2>
      </div>
    </div>
  </div>
</div>
