
<div class="container mt-3">
      <div class="row mt-4">
        <div class="col-8">
          <ul class="list-inline tabs-underlined" role="tablist">
            <li>
              <a href="#" class="tab-underlined active" data-bs-toggle="tab" role="tab" data-bs-target="#tab1">Mes demandes</a>
            </li>
            <li>
              <a href="#" class="tab-underlined" data-bs-toggle="tab" role="tab" data-bs-target="#tab2">Mes réservations</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade active show" id="tab1" role="tabpanel">
              <% @user.bookings.order(start_date: :desc).each do |booking| %>
                <div class="booking-card d-flex mt-4">
                  <%= cl_image_tag booking.horse.photo.key, class: "img-fluid" %>
                  <div class="d-flex w-100 justify-content-around align-items-center">
                    <h3> <%=booking.horse.name%></h3>
                    <p><i class="fa-regular fa-calendar text-pmured"></i> <%= booking.start_date %> - <%= booking.end_date %></p>
                    <p class="h5 text-pmured"><%= booking.total_price%>€</p>
                      <% if booking.status == "pending" %>
                    <div class="d-flex">
                      <%= link_to "Accepter", accept_owner_booking_path(booking), data: { turbo_method: :patch }, class: "pmugreen-link mr-3" %>
                      <div class="mx-3"></div>
                      <%= link_to "Refuser", decline_owner_booking_path(booking), data: { turbo_method: :patch }, class: "pmured-link" %>
                    </div>
                      <% elsif booking.status == "approved"  %>
                        <i class="fa-solid fa-square-check text-pmugreen "></i>
                      <% else %>
                        <i class="fa-solid fa-xmark text-pmured"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="tab-pane fade" id="tab2" role="tabpanel">
              <% @booking_received.order(start_date: :desc).each do |booking| %>
                <div class="booking-card d-flex mb-4 mt-3">
                  <%= cl_image_tag booking.horse.photo.key, class: "img-fluid" %>
                  <div class="d-flex w-100 justify-content-around align-items-center">
                    <h3> <%=booking.horse.name%></h3>
                    <p><i class="fa-regular fa-calendar text-pmured"></i> <%= booking.start_date %> - <%= booking.end_date %></p>
                    <p class="h5 text-pmured"><%= booking.total_price%>€</p>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
        </div>
        <div class="col-4">
          <div class="mx-3">
            <h1 class="mx-1">Mes informations</h1>
          </div>

          <div class="container d-flex justify-content-center align-items-center">
            <div class="card mt-2 card-shadow">
              <div class="text-center mt-4">
                <%= cl_image_tag @user.photo.key, class: "avatar-large", width: "80" %>
              </div>
              <div class="text-center mt-4">
                <h4 class="mb-0"><%= @user.name%> </h4>
                <button class="btn btn-pmured mt-3">Voir mes cheveaux</button>
                <div class="d-flex justify-content-between align-items-center px-4">
                  <div class="stats">
                    <h6 class="mb-0">Nombre de cheveaux</h6>
                    <span><%= @user.horse_ids.count %></span>
                  </div>
                  <div class="stats m-4">
                    <h6 class="mb-0">Mes réservations</h6>
                    <span><%=@user.bookings.count %> </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
  </div>
</div>
