<div class="small-form">
  <h2>Se connecter</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: "Mot de passe" %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "btn-pmured mb-3" %>
    </div>
  <% end %>
  <%= link_to "Pas encore inscrit ? Cliquez ici pour crÃ©er un compte.", new_user_registration_path, class: 'pmured-link' %>
</div>
